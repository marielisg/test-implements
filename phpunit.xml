<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         cacheResultFile=".phpunit.cache/test-results"
         executionOrder="depends,defects"
         forceCoversAnnotation="false"
         beStrictAboutCoversAnnotation="true"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutTodoAnnotatedTests="true"
         failOnRisky="false"
         failOnWarning="false"
         beStrictAboutTestsThatDoNotTestAnything="false"
         verbose="true">
    <testsuites>
        <testsuite name="default">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <coverage cacheDirectory="./tests/output"
              includeUncoveredFiles="true"
              processUncoveredFiles="true"
              pathCoverage="true"
              ignoreDeprecatedCodeUnits="true"
              disableCodeCoverageIgnore="true">
        <include>
            <directory suffix=".php">app</directory>
        </include>
        <report>
            <clover outputFile="./tests/report/clover.xml"/>
            <crap4j outputFile="./tests/report/crap4j.xml" threshold="50"/>
            <html outputDirectory="./tests/report/html-coverage" lowUpperBound="50" highLowerBound="90"/>
            <php outputFile="./tests/report/coverage.php"/>
            <text outputFile="./tests/report/coverage.txt" showUncoveredFiles="false" showOnlySummary="true"/>
            <xml outputDirectory="./tests/report/xml-coverage"/>
        </report>
    </coverage>

    <logging>
        <junit outputFile="./tests/logs/junit.xml"/>
        <teamcity outputFile="./tests/logs/teamcity.txt"/>
        <testdoxHtml outputFile="./tests/logs/testdox.html"/>
        <testdoxText outputFile="./tests/logs/testdox.txt"/>
        <testdoxXml outputFile="./tests/logs/testdox.xml"/>
        <text outputFile="./tests/logs/logfile.txt"/>
    </logging>
</phpunit>
